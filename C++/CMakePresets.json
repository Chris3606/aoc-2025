{
  "version": 3,
  "configurePresets": [
    {
      "name": "common-clang",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl.exe",
        "CMAKE_CXX_COMPILER": "clang-cl.exe"
      }
    },
    {
      "name": "common-debug",
      "binaryDir": "${sourceDir}/build",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "common-release",
      "binaryDir": "${sourceDir}/build",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "common-x86",
      "hidden": true,
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-clang-x86"
        }
      },
      "architecture": {
        "strategy": "external",
        "value": "x86"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER_TARGET": "i686-pc-windows-msvc",
        "CMAKE_CXX_COMPILER_TARGET": "i686-pc-windows-msvc"
      }
    },
    {
      "name": "common-x64",
      "hidden": true,
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-clang-x64"
        }
      },
      "architecture": {
        "strategy": "external",
        "value": "x64"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER_TARGET": "x86_64-pc-windows-msvc",
        "CMAKE_CXX_COMPILER_TARGET": "x86_64-pc-windows-msvc"
      }
    },
    {
      "name": "common-no-analyzers",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_CLANG_TIDY": "",
        "CMAKE_CXX_CLANG_TIDY": ""
      }
    },
    {
      "name": "common-analyzers",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_CLANG_TIDY": "clang-tidy",
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--extra-arg=/EHsc"
      }
    },
    {
      "name": "Clang | Debug | x86",
      "inherits": [
        "common-clang",
        "common-debug",
        "common-x86",
        "common-no-analyzers"
      ]
    },
    {
      "name": "Clang | Debug | x64",
      "inherits": [
        "common-clang",
        "common-debug",
        "common-x64",
        "common-no-analyzers"
      ]
    },
    {
      "name": "Clang | Debug | x86 | Analyzers",
      "inherits": [
        "common-clang",
        "common-debug",
        "common-x86",
        "common-analyzers"
      ]
    },
    {
      "name": "Clang | Debug | x64 | Analyzers",
      "inherits": [
        "common-clang",
        "common-debug",
        "common-x64",
        "common-analyzers"
      ]
    },
    {
      "name": "Clang | Release | x86",
      "inherits": [
        "common-clang",
        "common-release",
        "common-x86",
        "common-no-analyzers"
      ]
    },
    {
      "name": "Clang | Release | x64",
      "inherits": [
        "common-clang",
        "common-release",
        "common-x64",
        "common-no-analyzers"
      ]
    }
  ]
}
